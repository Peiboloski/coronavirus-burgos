{
  "hosting": {
    "public": "dist/coronavirus-burgos",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "headers": [ {
          "key": "Cache-Control",
          "value": "max-age=60"
        } ],
        "destination": "/index.html"
      },
      {
        "source": "sitemap.xml",
        "destination": "/sitemap.xml"
      },
      {
        "source": "site.webmanifest",
        "destination": "/site.webmanifest"
      },
      {
        "source": "picture.png",
        "destination": "/picture.png",
        "headers": [ {
          "key": "Cache-Control",
          "value": "max-age=60"
        } ]
      }
    ]
  }
}